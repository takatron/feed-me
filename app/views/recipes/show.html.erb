<div class="recipes">
  <%= link_to('View All Recipes', recipes_path, class: 'recipes__view-all') %>

  <h1>
    <%= @recipe.title %> <span class="recipes__level">(<%= @recipe.level.name %>)</span>
    <%= button_to('Edit',
      edit_recipe_path(@recipe.id),
      :method => :get,
      class: 'secondary inline left') %>
  </h1>

  <span class="recipes__categories">
    <% @recipe.categories.each do |cat| %>
      <span class="recipes__categories--badge" style="background:<%= cat.colour %>; "><%= cat.name %></span>
    <% end %>
  </span>

  <h2>Ingredients</h2>
  <ul class="recipes__ingredients">
    <% Array(@recipe.ingredients.split(', ')).each do |ingredient| %>
      <li class="recipes__ingredients__each"><%= ingredient %></li>
    <% end %>
  </ul>

  <h2>Directions</h2>
  <ol class="recipes__steps">
    <% Array(@recipe.steps.split(', ')).each do |step| %>
      <li class="recipes__steps__each"><%= step %></li>
    <% end %>
  </ol>
  <%= button_to('Delete',
    @recipe,
    :method => :delete,
    class: 'delete',
    data:{ confirm: 'Are you sure?' }) %>
  </div>
