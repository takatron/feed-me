<%= form_for recipe do |f| %>
  <%= f.label "Name:" %>
  <br />
  <%= f.text_field :title %>
  <br />
  <br />
  <%= f.label "Ingredients:" %>
  <br />
  <%= f.text_field :ingredients %>
  <br />
  <br />
  <%= f.label "Steps:" %>
  <br />
  <%= f.text_field :steps %>
  <br />
  <br />
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |cat|%>
    <%= cat.label(class: 'checkbox inline') {cat.check_box() + cat.text } %><br />
  <% end %>
  <%= link_to('+ New Category', new_category_path) %>
  <br />
  <br />

  <br />
  <br />
  <%= link_to("cancel", path) %> <%= f.submit "Submit" %>
<% end %>
