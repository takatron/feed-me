<%= form_for recipe do |f| %>
  <%= f.label "Name:" %>
  <br />
  <%= f.text_field :title %>
  <br />
  <br />
  <%= f.label "Ingredients:" %>
  <br />
  <%= f.text_field :ingredients %>
  <br />
  <br />
  <%= f.label "Steps:" %>
  <br />
  <%= f.text_field :steps %>
  <br />
  <br />
  <%= f.submit "Submit" %>
<% end %>
