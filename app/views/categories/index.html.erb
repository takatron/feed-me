<h1>Categories</h1>
<%= link_to('+ New Category', new_category_path) %>
<br />
<br />
<% @category.each do |category| %>
  <h2 class="categories__title-container">
    <span class="categories__colour-indicator" style="background:<%= category.colour %>;"></span>
    <%= link_to(category.name, category_path(category.id), class: 'categories__link no-deco') %>
    <span class="categories__count">(<%= category.recipes.count %>)</span>
  </h2>
<% end %>
